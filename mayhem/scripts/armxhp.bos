#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, pad, nano1, nano2, nano3, nano4, beam1, beam2, 
       beam3, beam4, door1, door2, door3, door4, lights;

static-var  Nano_1, On_2, State_3, Busy_4, Demo;


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

RequestState()
{
	while( ( !Busy_4 ) AND On_2 != State_3 )
	{
		Busy_4 = 1;
		if( On_2 AND ( !State_3 ) )
		{
			dont-cache beam1;
			dont-cache beam2;
			dont-cache beam3;
			dont-cache beam4;
			dont-cache pad;
			dont-cache nano1;
			dont-cache nano2;
			dont-cache nano3;
			dont-cache nano4;
			dont-cache door1;
			turn door1 to z-axis <-90> speed <120>;
			sleep 50;
			dont-cache door4;
			turn door4 to z-axis <-90> speed <120>;
			sleep 50;
			dont-cache door2;
			turn door2 to z-axis <-90> speed <120>;
			sleep 50;
			dont-cache door3;
			turn door3 to z-axis <-90> speed <120>;
			sleep 600;
			move nano1 to x-axis [6] speed [12];
			sleep 50;
			move nano4 to x-axis [6] speed [12];
			sleep 50;
			move nano2 to x-axis [6] speed [12];
			sleep 50;
			move nano3 to x-axis [6] speed [12];
			sleep 350;
			turn nano1 to y-axis <-20> speed <100>;
			sleep 50;
			turn nano4 to y-axis <20> speed <100>;
			sleep 200;
			set YARD_OPEN to 1;
			while( !get YARD_OPEN )
			{
				sleep 1500;
				set YARD_OPEN to 1;
			}
			set INBUILDSTANCE to 1;
			State_3 = 1;
		}
		if( ( !On_2 ) AND State_3 )
		{
			State_3 = 0;
			set INBUILDSTANCE to 0;
			set YARD_OPEN to 0;
			while( get YARD_OPEN )
			{
				sleep 1500;
				set YARD_OPEN to 0;
			}
			turn nano1 to y-axis <0> speed <100>;
			turn nano4 to y-axis <0> speed <100>;
			sleep 200;
			move nano1 to x-axis [0] speed [12];
			move nano4 to x-axis [0] speed [12];
			sleep 50;
			move nano2 to x-axis [0] speed [12];
			move nano3 to x-axis [0] speed [12];
			sleep 450;
			turn door1 to z-axis <0> speed <120>;
			turn door4 to z-axis <0> speed <120>;
			sleep 50;
			turn door2 to z-axis <0> speed <120>;
			turn door3 to z-axis <0> speed <120>;
			sleep 700;
			cache beam1;
			cache beam2;
			cache beam3;
			cache beam4;
			cache door1;
			cache door2;
			cache door3;
			cache door4;
			cache pad;
			cache nano1;
			cache nano2;
			cache nano3;
			cache nano4;
		}
		Busy_4 = 0;
	}
}

