Create()
{
	dont-shade beam1;
	dont-shade beam2;
	dont-shade beam3;
	dont-shade beam4;
	dont-shade pad;
	Demo = 0;
	Nano_1 = 1;
	On_2 = 0;
	State_3 = 0;
	Busy_4 = 0;
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 500;
	}
	start-script SmokeUnit();
	dont-cache lights;
}

QueryNanoPiece(piecenum)
{
	if( !Nano_1 )
	{
		piecenum = beam1;
	}
	if( Nano_1 == 1 )
	{
		piecenum = beam2;
	}
	if( Nano_1 == 2 )
	{
		piecenum = beam3;
	}
	++Nano_1;
	if( Nano_1 > 3 )
	{
		piecenum = beam4;
		Nano_1 = 0;
	}
}

